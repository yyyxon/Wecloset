<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Properties>
		<Property name="logNm">logtest</Property>
		<Property name="layoutPattern">%d [%t] %-5level %c(%M:%L) - %m%n</Property>
	</Properties>
	<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="${layoutPattern}" />
		</Console>
		
		<RollingFile name="file" fileName="/log/${logNm}.log" filePattern="/UserChat/log/logs/${logNm}_%d{yyyy-MM-dd}_%i.log">
			<PatternLayout pattern="${layoutPattern}" />
			<Policies>
				<SizeBasedTriggeringPolicy size="10MB"  /> <!-- 10MB 용량이 초과시 DefaultRolloverStrategy 정책만큼 넘버링 -->				
			</Policies>
			<DefaultRolloverStrategy max="500" fileIndex="min" /><!-- 롤링 파일 500개 까지 생성 -->
		</RollingFile>
	</Appenders>

	<Loggers>
	
		 <!-- Application Loggers -->
	    <logger name="mapper" level="debug">
	       <AppenderRef ref="console" />
	    </logger>

		<!-- 해당 패키지 level을 info로 설정 -->
		<logger name="com.wecloset.web" level="info" additivity="false">
			<AppenderRef ref="console" />
			<AppenderRef ref="file" />
		</logger>
	
	
		<!-- 기본 레벨은 debug -->
		<Root level="debug" additivity="false">
			<AppenderRef ref="console" />
			<AppenderRef ref="file" />
		</Root>

	
	</Loggers>
</Configuration>